# North Star Metrics - Environment Configuration
# Copy this file to .env and fill in your API keys

# === REQUIRED API KEYS ===

# GitHub Personal Access Token (Required)
# Permissions needed: repo, read:org
# Get one at: https://github.com/settings/tokens
GITHUB_TOKEN="your_github_token_here"                  # Format: ghp_... or github_pat_...

# Linear API Key (Required for Linear integration)
# Get from: https://linear.app/settings/api
LINEAR_API_KEY="your_linear_api_key_here"              # Can also use LINEAR_TOKEN

# Anthropic API Key (Required for AI analysis)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY="your_anthropic_api_key_here"        # Format: sk-ant-api03-...

# === OPTIONAL API KEYS (for additional AI providers) ===

PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Optional: Format: pplx-...
OPENAI_API_KEY="your_openai_api_key_here"             # Optional, for OpenAI/OpenRouter models. Format: sk-proj-...
GOOGLE_API_KEY="your_google_api_key_here"             # Optional, for Google Gemini models.
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models.
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional, for xAI AI models.
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models (requires endpoint in .taskmaster/config.json).
OLLAMA_API_KEY="your_ollama_api_key_here"             # Optional: For remote Ollama servers that require authentication.

# === OPTIONAL CONFIGURATION ===

# Application Environment
# NORTH_STAR_ENV=development                    # Options: development, staging, production, test
# NORTH_STAR_DEBUG=false                       # Enable debug mode

# Organization Settings
# ORGANIZATION_NAME=Your Organization Name      # Default organization name
# DEFAULT_ANALYSIS_DAYS=30                     # Default analysis period

# Directory Settings
# NORTH_STAR_CONFIG_DIR=config                 # Configuration directory
# NORTH_STAR_DATA_DIR=analysis_results         # Data output directory
# NORTH_STAR_LOGS_DIR=logs                     # Logs directory

# === PROCESSING LIMITS (OPTIONAL) ===

# Diff processing
# DIFF_LENGTH_LIMIT=4000                       # Maximum diff length to process
# DIFF_TRUNCATION_BUFFER=100                   # Buffer for diff truncation

# Caching
# CACHE_SIZE_DEFAULT=1000                      # Default cache size
# CACHE_SIZE_MAX=10000                         # Maximum cache size
# CACHE_TTL_SECONDS=3600                       # Cache TTL in seconds

# Threading and concurrency
# MAX_WORKERS_DEFAULT=5                        # Default number of worker threads
# MAX_WORKERS_MAX=20                           # Maximum worker threads
# THREAD_TIMEOUT_SECONDS=300                   # Thread timeout in seconds

# Memory limits
# MAX_MEMORY_MB=2048                           # Maximum memory usage in MB
# MEMORY_WARNING_THRESHOLD=0.8                 # Memory warning threshold (0.0-1.0)

# File processing
# MAX_FILE_SIZE_MB=100                         # Maximum file size to process
# CSV_CHUNK_SIZE=10000                         # CSV processing chunk size
# MAX_FILES_PER_BATCH=1000                     # Maximum files per batch

# === API CONFIGURATION (OPTIONAL) ===

# Rate limiting
# API_RATE_LIMIT_REQUESTS_PER_MINUTE=60        # API rate limit
# API_TIMEOUT_SECONDS=30                       # API timeout
# API_RETRY_ATTEMPTS=3                         # Number of retry attempts
# API_RETRY_DELAY_SECONDS=1.0                  # Delay between retries

# === PRICING CONFIGURATION (OPTIONAL) ===

# Claude pricing per 1K tokens (update with current rates)
# CLAUDE_INPUT_PRICE_PER_1K=0.003              # Input token price
# CLAUDE_OUTPUT_PRICE_PER_1K=0.015             # Output token price

# Cost monitoring
# DAILY_COST_WARNING_THRESHOLD=100.0           # Daily cost warning threshold ($)
# MONTHLY_COST_LIMIT=1000.0                    # Monthly cost limit ($)

# === SECURITY SETTINGS (OPTIONAL) ===

# Key management
# API_KEY_MIN_LENGTH=10                        # Minimum API key length
# API_KEY_MAX_LENGTH=500                       # Maximum API key length
# KEY_ROTATION_DAYS=90                         # Key rotation period

# Session management
# SESSION_TIMEOUT_MINUTES=60                   # Session timeout
# MAX_FAILED_ATTEMPTS=5                        # Maximum failed login attempts

# === METRICS CONFIGURATION (OPTIONAL) ===

# Impact score weights (must sum to 1.0)
# COMPLEXITY_WEIGHT=0.4                        # Complexity weight
# RISK_WEIGHT=0.5                             # Risk weight
# CLARITY_WEIGHT=0.1                          # Clarity weight

# Analysis periods
# PILOT_DAYS=7                                 # Pilot analysis period
# DEFAULT_ANALYSIS_DAYS=30                     # Default analysis period
# MAX_ANALYSIS_DAYS=365                        # Maximum analysis period

# Thresholds
# HIGH_IMPACT_THRESHOLD=7.0                    # High impact threshold
# HIGH_COMPLEXITY_THRESHOLD=8                  # High complexity threshold
# HIGH_RISK_THRESHOLD=8                        # High risk threshold

# Developer metrics
# DEVELOPER_METRICS_WINDOW_WEEKS=4             # Analysis window for developer metrics
# MIN_COMMITS_FOR_ANALYSIS=5                   # Minimum commits for analysis

# === VALIDATION LIMITS (OPTIONAL) ===

# String length limits
# PROMPT_INPUT_MAX_LENGTH=10000                # Maximum prompt length
# TITLE_MAX_LENGTH=500                         # Maximum title length
# DESCRIPTION_MAX_LENGTH=2000                  # Maximum description length
# FILENAME_MAX_LENGTH=200                      # Maximum filename length
# EMAIL_MAX_LENGTH=254                         # Maximum email length

# Numeric ranges
# SCORE_MIN=1                                  # Minimum score value
# SCORE_MAX=10                                 # Maximum score value
# PERCENTAGE_MIN=0.0                           # Minimum percentage
# PERCENTAGE_MAX=100.0                         # Maximum percentage

# GraphQL limits
# GRAPHQL_QUERY_MAX_LENGTH=10000               # Maximum GraphQL query length
# GRAPHQL_MAX_COMPLEXITY=100                   # Maximum GraphQL complexity
# GRAPHQL_MAX_DEPTH=10                         # Maximum GraphQL depth
# GRAPHQL_VARIABLE_MAX_LENGTH=1000             # Maximum GraphQL variable length

# === LOGGING CONFIGURATION (OPTIONAL) ===

# Log levels
# DEFAULT_LOG_LEVEL=INFO                       # Default log level
# DEBUG_LOG_LEVEL=DEBUG                        # Debug log level

# Log file settings
# MAX_LOG_FILE_SIZE_MB=100                     # Maximum log file size
# MAX_LOG_FILES=5                              # Maximum number of log files

# Structured logging
# ENABLE_STRUCTURED_LOGGING=true               # Enable structured JSON logging
# ENABLE_CORRELATION_IDS=true                  # Enable correlation ID tracking